{
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }   ,
    },
    "env": {
       "browser": true,
       "node": true,
    },
    "globals": {
      "Promise": true,
      "graphql": true,
    },
    "plugins":["react", "prettier"],
     "extends": ["plugin:react/recommended"],
    "rules": {
        "camelcase": [0, {"properties": "never"}],
        "consistent-return": 0, //maybe enable this later?
        "default-case": 2,
        "dot-notation": [2, { "allowKeywords": true }],
        "eqeqeq": 2,
        "no-alert": 2,
        "no-array-constructor": 2,
        "no-caller": 2,
        "no-catch-shadow": 2,
        "no-cond-assign": [2, "always"],
        "no-debugger": 1,
        "no-labels": 2,
        "no-eval": 2,
        "no-extend-native": 2,
        "no-extra-bind": 2,
        "no-implied-eval": 2,
        "no-iterator": 2,
        "no-label-var": 2,
        "no-lone-blocks": 2,
        "no-loop-func": 2,
        "no-multi-str": 2,
        "no-native-reassign": 2,
        "no-nested-ternary": 2,
        "no-new": 2,
        "no-new-func": 2,
        "no-new-object": 2,
        "no-new-wrappers": 2,
        "no-octal-escape": 2,
        "no-process-exit": 2,
        "no-proto": 2,
        "no-return-assign": 0, //disabling for now
        "no-script-url": 2,
        "no-sequences": 2,
        "no-shadow": 2,
        "no-shadow-restricted-names": 2,
        "no-undef": 2,
        "no-undef-init": 2,
        "no-unused-expressions": 2,
        "no-unused-vars": [2, {"vars": "all", "args": "none", "varsIgnorePattern":"React"}],
        "no-use-before-define": [2, "nofunc"],
        "no-var": [2],
        "no-with": 2,
        "prettier/prettier": [2, {
          "singleQuote": true,
          "jsxBracketSameLine": false,
          "trailingComma": 'es5',
        }],
        "react/jsx-no-duplicate-props": [2, {"ignoreCase": true}],
        "react/prop-types": [0],
        "strict": [2, "function"],
    }
}
